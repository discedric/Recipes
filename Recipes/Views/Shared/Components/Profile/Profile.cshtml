
@if (ViewBag.User != null)
{
    <div class="flex-shrink-0 dropdown px-lg-3">
        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://cdn.iconscout.com/icon/free/png-256/free-account-269-866236.png" alt="mdo" width="32" height="32" class="rounded-circle">
        </a>
        <ul class="dropdown-menu text-small shadow" style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate(0px, 34px);" data-popper-placement="bottom-end">
            <li><a asp-controller="Profile" asp-action="Settings" class="dropdown-item">Settings</a></li>
            <li><a asp-controller="Profile" asp-action="Profile" class="dropdown-item">Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Logout">Sign out</a></li>
        </ul>
    </div>
}
else
{
    <div class="col-md-3 text-end">
        <a asp-controller="Profile" asp-action="Login" class="btn btn-outline-primary me-2">Login</a>
        <a asp-controller="Profile" asp-action="Register" class="btn btn-primary">Register</a>
    </div>
}
