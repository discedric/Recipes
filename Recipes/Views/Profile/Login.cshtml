@model User

<div class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto" style="max-width:300px;">
        <form method="post">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <input asp-for="Email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                <label asp-for="Password">Password</label>
            </div>

            <div class="form-check text-start my-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label asp-for="RememberMe" class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        </form>
    </main>
</div>



