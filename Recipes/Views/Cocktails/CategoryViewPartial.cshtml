@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ApiCocktails _apiCocktails = new();
    IList<Categories.Category> categories = _apiCocktails.GetCocktailCategories(new()).Result;
    ViewData["Title"] = "Cocktail Categories";
}

<div class="container mt-5">
    <h2>@ViewBag.title</h2>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <a class="btn btn-outline-secondary" asp-action="Index">Home</a>
            @foreach (var category in categories)
            {
                <a class="btn btn-outline-secondary" asp-action="CocktailCategory" asp-route-id="@category.strCategory">@category.strCategory</a>
            }
        </div>
    </div>
</div>
