@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Categories.Catwithdrinks
@{
    ViewData["Title"] = Model.category;
}

<div class="text-center">
    <partial name="CategoryViewPartial" />
    <h1 class="display-4">@ViewBag.title</h1>
    <div style="display:flex;flex-wrap:wrap;justify-content: center;">
        @if(Model.drinks != null){
            foreach (var meal in Model.drinks)
            {
                if (meal != null)
                {
                    <partial name="CocktailViewPartial" model="meal" />
                }
            }
        }}
    </div>
</div>