@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IList<CocktailItem>
@{
    ViewData["Title"] = "Cocktails Recipes";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.title</h1>
    <form class="container-fluid" method="post" asp-action="SearchDrinks">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Drink Name" name="name" aria-label="Drink name" aria-describedby="basic-addon1">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>
    <partial name="CategoryViewPartial" />
    <h2>Random Drinks</h2>
    <div style="display:flex;flex-wrap:wrap;justify-content: center;">
        @if (Model != null)
        {
            foreach (var drink in Model)
            {
                if (drink != null)
                {
                    <partial name="CocktailViewPartial" model="drink" />
                }
            }
        }
    </div>
</div>
